mixin feedback
    .feedback
        .feedback__title 
        .feedback__inner
            .feedback-form
                .feedback-form__inner
                    .feedback-form__label Имя
                    input(type="text").feedback-form__textform.textform
                .feedback-form__inner
                    .feedback-form__label Компания
                    input(type="text").feedback-form__textform.textform
                .feedback-form__inner
                    .feedback-form__label Телефон
                    input(type="phone").feedback-form__textform.textform
                .feedback-form__inner
                    .feedback-form__label Почта
                    input(type="email").feedback-form__textform.textform
                .feedback-form__inner
                    .feedback-form__label Услуга
                    input(type="select").feedback-form__textform.textform
                .feedback-form__button-inner   
                    .feedback-form__button.button Подать заявку